<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <Button
            android:text="Basic interaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inter" android:onClick="switchActivity"/>
    <Button
            android:text="Basic dice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dice" android:onClick="switchActivity"/>
    <Button
            android:text="Basic fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frag" android:onClick="switchActivity"/>
    <Button
            android:text="Recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recy" android:onClick="switchActivity"/>
    <Button
            android:text="Basic ViewModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mvvm" android:onClick="switchActivity"/>
    <Button
            android:text="About binding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/about" android:onClick="switchActivity"/>
    <Button
            android:text="Constraint layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cons" android:onClick="switchActivity"/>
    <Button
            android:text="Trivia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/triv" android:onClick="switchActivity"/>
</LinearLayout>